{% extends '::base.html.twig' %} {% block body -%}

    <h2>{{ "cdptemplate.index.title" | trans }}</h2>

    <div class="row margin-top-50">
        <div class="col-md-12">

            <table class="table">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Organisation</th>
                    <th>Language</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{% if entity.date %}{{ entity.date|date('d-m-Y') }}{% endif %}</td>
                        <td>{% if(entity.organization != null) %} {{ entity.organization.name }} {% endif %}</td>
                        <td>{{ entity.language }}</td>
                        <td>
                            <ul>
                                <li><a
                                            href="{{ path('cdptemplate_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li><a
                                            href="{{ path('cdptemplate_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


            <p>
                <a href="{{ path('cdptemplate_new') }}" type="button"
                   class="btn btn-default btn-cons"> Create a new entry </a>
            </p>


        </div>
    </div>


{% endblock %}
