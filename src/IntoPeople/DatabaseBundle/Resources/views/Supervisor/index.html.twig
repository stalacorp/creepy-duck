{% extends '::base.html.twig' %} 
{% block body -%}

    <h2>{{ "supervisor.index.title" | trans }}</h2>

    <div class="row">
        <div class="col-md-12">

            {% for flashMessage in app.session.flashbag.get('success') %}

                <div class="alert alert-success">
                    <button class="close" data-dismiss="alert"></button>
                    {{ flashMessage }}
                </div>

            {% endfor %}


            <table class="table no-more-tables">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>CDP</th>
                    <th>Mid Year</th>
                    <th>End Year</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.user.firstname }} {{ entity.user.lastname }}</td>

                        {% if entity.cdp.formstatus.id == 1 %}

                            <td>{{ entity.cdp.formstatus.name }}</td>
                        {% elseif entity.cdp.formstatus.id == 2 %}
                            <td>{{ entity.cdp.formstatus.name }}</td>
                        {% elseif entity.cdp.formstatus.id == 3 %}
                            <td>
                                <a href="{{ path('supervisor_addComment',{'id' : entity.cdp.id}) }}">{{ entity.cdp.formstatus.name }}</a>
                            </td>
                        {% elseif entity.cdp.formstatus.id == 4 %}
                            <td>{{ entity.cdp.formstatus.name }}</td>
                        {% elseif entity.cdp.formstatus.id == 5 %}
                            <td>{{ entity.cdp.formstatus.name }}</td>
                        {% elseif entity.cdp.formstatus.id == 6 %}
                            <td>{{ entity.cdp.formstatus.name }}</td>
                        {% elseif entity.cdp.formstatus.id == 7 %}
                            <td>{{ entity.cdp.formstatus.name }}</td>
                        {% elseif entity.cdp.formstatus.id == 8 %}
                            <td><a href="{{ path('cdp_show',{'id' : entity.cdp.id}) }}">{{ entity.cdp.formstatus.name }}</a>
                            </td>
                        {% endif %}


                        {% if entity.midyear.formstatus.id == 3 %}
                            <td>
                                <a href="{{ path('supervisor_addMidyearComment',{'id' : entity.midyear.id}) }}">{{ entity.midyear.formstatus.name }}</a>
                            </td>
                        {% elseif entity.midyear.formstatus.id == 8 %}
                            <td>
                                <a href="{{ path('midyear_show',{'id' : entity.midyear.id}) }}">{{ entity.midyear.formstatus.name }}</a>
                            </td>
                        {% else %}
                            <td>{{ entity.midyear.formstatus.name }}</td>
                        {% endif %}



                        {% if entity.endyear.formstatus.id == 3 %}
                            <td>
                                <a href="{{ path('supervisor_addEndyearComment',{'id' : entity.endyear.id}) }}">{{ entity.endyear.formstatus.name }}</a>
                            </td>
                        {% elseif entity.endyear.formstatus.id == 8 %}
                            <td>
                                <a href="{{ path('endyear_show',{'id' : entity.endyear.id}) }}">{{ entity.endyear.formstatus.name }}</a>
                            </td>
                        {% else %}
                            <td>{{ entity.endyear.formstatus.name }}</td>
                        {% endif %}


                        <!-- AANPASSEN + DETAIL IS NIET NODIG? -->
                        <!-- <td> <ul>
											<li><a
												href="{{ path('feedbackcycle_show', { 'id': entity.id }) }}">show</a>
											</li>
											<li><a
												href="{{ path('feedbackcycle_edit', { 'id': entity.id }) }}">edit</a>
											</li>
										</ul></td> -->

                    </tr>
                {% endfor %}
                </tbody>
            </table>


        </div>
    </div>


{% endblock %}


