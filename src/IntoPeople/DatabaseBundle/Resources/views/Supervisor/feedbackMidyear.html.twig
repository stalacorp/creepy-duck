{% extends 'IntoPeopleDatabaseBundle:Midyear:show.html.twig' %} 
{% block comment -%}

    <div class="panel panel-default">

        <div class="panel-body">

            <h3>Comments from supervisor</h3>

            {{ form_start(form) }}

            <div class="row">
                <div class="col-md-3">

                    {{ form_row(form.feedbackdate) }}

                </div>
            </div>

            {{ form_row(form.commentSup, { 'attr': {'rows': '4'} }) }}

            {{ form_widget(form.save) }} {{ form_widget(form.approve) }} {{ form_widget(form.disapprove) }}

            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}


