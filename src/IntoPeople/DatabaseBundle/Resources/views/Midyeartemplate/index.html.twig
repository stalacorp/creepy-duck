{% extends '::base.html.twig' %} {% block body -%}

    <h2>{{ "midyeartemplate.index.title" | trans }}</h2>

    <div class="row">
        <div class="col-md-12">

            <table class="table borderless">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Language</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.date | localizeddate('medium', 'none', app.request.locale ) }}</td>
                        <td>{{ entity.language }}</td>
                        <td>

                            <a href="{{ path('midyeartemplate_show', { 'id': entity.id }) }}" type="button" class="btn btn-default btn-sm">show</a>

                            <a href="{{ path('midyeartemplate_edit', { 'id': entity.id }) }}" type="button" class="btn btn-default btn-sm">edit</a>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


            <a href="{{ path('midyeartemplate_new') }}" type="button" class="btn btn-default">{{ "button.create" | trans }}</a>


        </div>
    </div>

{% endblock %}
