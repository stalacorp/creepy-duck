{% extends '::base.html.twig' %} {% block body -%}


    {{ form(form) }}


    <div id="result"></div>

{% endblock %}

{% block javascripts -%}
    {{ parent() }}
    <script>
        function getform() {
            $.ajax({
                url: Routing.generate('midyear_edit', {
                    languageId: $('#form_language').val(),
                    id: {{ entity.id }},
                    _locale:locale
                }),
                success: function (result) {
                    $("#result").html(result);
                }
            });
        }
        $(function () {
            getform();

            $('#form_language').change(function () {
                getform();
            });
        });
    </script>
{% endblock %}

