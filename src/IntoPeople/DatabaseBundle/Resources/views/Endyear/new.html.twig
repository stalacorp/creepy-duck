                    <td>{{ cdp.challengeHow2 }}</td>
                    <td>{{ cdp.challengeSuccess2 }}</td>
                    <td>{{ cdp.challengeNeeds2 }}</td>
                </tr>

                <tr>
                    <td>
                        <p>{{ cdp.coreQuality3 }}</p>
                        <p>{{ cdp.coreQuality3Why }}</p>
                    </td>
                    <td>
                        <p>{{ cdp.challenge3 }}</p>
                        <p>{{ cdp.challengeWhy3 }}</p>
                    </td>
                    <td>{{ cdp.challengeHow3 }}</td>
                    <td>{{ cdp.challengeSuccess3 }}</td>
                    <td>{{ cdp.challengeNeeds3 }}</td>
                </tr>

                <tr>
                    <td>
                        <p>{{ cdp.coreQuality4 }}</p>
                        <p>{{ cdp.coreQuality4Why }}</p>
                    </td>
                    <td>
                        <p>{{ cdp.challenge4 }}</p>
                        <p>{{ cdp.challengeWhy4 }}</p>
                    </td>
                    <td>{{ cdp.challengeHow4 }}</td>
                    <td>{{ cdp.challengeSuccess4 }}</td>
                    <td>{{ cdp.challengeNeeds4 }}</td>
                </tr>

                <tr>
                    <td>
                        <p>{{ cdp.coreQuality5 }}</p>
                        <p>{{ cdp.coreQuality5Why }}</p>
                    </td>
                    <td>
                        <p>{{ cdp.challenge5 }}</p>
                        <p>{{ cdp.challengeWhy5 }}</p>
                    </td>
                    <td>{{ cdp.challengeHow5 }}</td>
                    <td>{{ cdp.challengeSuccess5 }}</td>
                    <td>{{ cdp.challengeNeeds5 }}</td>
                </tr>

            </table>

        </div>
    </div>


    <div class="row">
        <div class="col-md-12">


            {{ form_start(form) }}

            {{ form_errors(form) }}


            <h3>Development needs for your job</h3>

            <p>Read your job description carefully. </p>

            <table class="table borderless">

                <thead>
                <tr>
                    <th style="width:40%" colspan="2">{{ template.whatWhy }}</th>
                    <th style="width:60%">{{ template.evaluation }}</th>

                </tr>
                </thead>

                <tbody>

                <tr>
                    <td colspan="2">{{ template.whatWhyDescription }}</td>
                    <td>{{ template.evaluationDescription }}</td>
                </tr>

                <tr>
                    <td colspan="5"><h5 class="text-center">{{ template.tasks }}</h5></td>
                </tr>


                <tr>
                    <td colspan="2">{{ devneeds.task1 }}</td>
                    <td>{{ form_errors(form.evaluationtask1) }}
                        {{ form_widget(form.evaluationtask1) }}</td>

                </tr>

                <tr>
                    <td colspan="2">{{ devneeds.task2 }}</td>
