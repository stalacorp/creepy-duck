{% extends '::base.html.twig' %} 
{% block body -%}


    {% set devneeds = entity.developmentneeds %}
    {% set template = entity.endyeartemplate %}
    {% set cdp = entity.feedbackcycle.cdp %}

    <h2 class="text-center">{{ "endyear.show.title" | trans }}</h2>


    {% if entity.formstatus.id > 3 %}

        <div class="row margin-top-50">
            <div class="col-md-6">

                <h3>Comments supervisor</h3>

                {{ entity.commentSup }}

            </div>
        </div>

    {% endif %}

    {% if entity.formstatus.id > 5 %}

        <div class="row margin-top-50">
            <div class="col-md-6">

                <h3>Feedback HR</h3>

                {{ entity.feedbackHR }}

            </div>
        </div>

    {% endif %}

    <div class="row">
        <div class="col-md-12">

            <h3>Personalia</h3>

            <div class="row">

                <div class="col-md-6">

                    <table class="table borderless">

                        <tr>
                            <th>Name:
                            <th>
                            <td>{{ app.user.firstname }} {{ app.user.lastname }}</td>
                        </tr>

                        {% if app.user.supervisor != null %}
                            <tr>
                                <th>Supervisor:
                                <th>
                                <td>{{ app.user.supervisor.firstname }} {{ app.user.supervisor.lastname }}</td>
                            </tr>
                        {% endif %}

                        <tr>
                            <th>Date discussion:
                            <th>
                            <td></td>
                        </tr>

                    </table>

                </div>

                <div class="col-md-6">

                    <table class="table borderless">

                        <tr>
                            <th>Team:<th>
                            <td></td>
                        </tr>


                        <tr>
                            <th>Functie:<th>
                            <td></td>
                        </tr>

                    </table>

                </div>

            </div>



        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <h3>{# template.selfassesment #}</h3>

            <p class="">{# template.selfassesmentDescription #}</p>


            <table class="table borderless">
                <tr>
                    <th style="width: 20%">Talents</th>
                    <th style="width: 20%">Challenges</th>
                    <th style="width: 20%">How</th>
                    <th style="width: 20%">Success</th>
                    <th style="width: 20%">Needs</th>
                </tr>

                <tr>
                    <td>
                        <p>{{ cdp.coreQuality1 }}</p>
                        <p>{{ cdp.coreQuality1Why }}</p>
                    </td>
                    <td>
                        <p>{{ cdp.challenge1 }}</p>
                        <p>{{ cdp.challengeWhy1 }}</p>
                    </td>
                    <td>{{ cdp.challengeHow1 }}</td>
                    <td>{{ cdp.challengeSuccess1 }}</td>
                    <td>{{ cdp.challengeNeeds1 }}</td>
                </tr>

                <tr>
                    <td>
                        <p>{{ cdp.coreQuality2 }}</p>
                        <p>{{ cdp.coreQuality2Why }}</p>
                    </td>
                    <td>
                        <p>{{ cdp.challenge2 }}</p>
                        <p>{{ cdp.challengeWhy2 }}</p>
