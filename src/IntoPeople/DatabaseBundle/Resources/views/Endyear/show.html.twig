{% extends '::base.html.twig' %} 
{% block body -%}

    <h2>{{ "endyear.show.title" | trans }}</h2>

    {% set devneeds = entity.developmentneeds %}
    {% set template = entity.endyeartemplate %}

    <div class="row">
        <div class="col-md-12">


            <h3>Development needs for your job</h3>

            <p>Read your job description carefully. </p>

            <table class="table table-bordered no-more-tables">

                <thead>
                <tr>
                    <th style="width:40%" colspan="2">{{ template.whatWhy }}</th>
                    <th style="width:60%">{{ template.evaluation }}</th>

                </tr>
                </thead>

                <tbody>

                <tr>
                    <td colspan="2">{{ template.whatWhyDescription }}</td>
                    <td>{{ template.evaluationDescription }}</td>
                </tr>

                <tr>
                    <td colspan="5"><h5 class="text-center">{{ template.tasks }}</h5></td>
                </tr>


                <tr>
                    <td colspan="2">{{ devneeds.task1 }}</td>
                    <td>{{ entity.evaluationtask1 }}</td>

                </tr>

                <tr>
                    <td colspan="2">{{ devneeds.task2 }}</td>
                    <td>{{ entity.evaluationtask2 }}</td>

                </tr>

                <tr>
                    <td colspan="2">{{ devneeds.task3 }}</td>
                    <td>{{ entity.evaluationtask3 }}</td>

                </tr>

                <tr>
                    <td colspan="2">{{ devneeds.task4 }}</td>
                    <td>{{ entity.evaluationtask4 }}</td>

                </tr>

                <tr>
                    <td colspan="2">{{ devneeds.task5 }}</td>
                    <td>{{ entity.evaluationtask5 }}</td>

                </tr>

                <tr>
                    <td colspan="5"><h5 class="text-center">{{ template.skills }}</h5></td>
                </tr>

                <tr>
                    <th style="width:40%" colspan="2">{{ template.whatWhy }}</th>
                    <th style="width:60%">{{ template.evaluation }}</th>

                </tr>


                <tr>
                    <td colspan="2">{{ devneeds.skill1 }}</td>
                    <td>{{ entity.evaluationskill1 }}</td>

                </tr>

                <tr>
                    <td colspan="2">{{ devneeds.skill2 }}</td>
                    <td>{{ entity.evaluationskill2 }}</td>

                </tr>

                <tr>
                    <td colspan="2">{{ devneeds.skill3 }}</td>
                    <td>{{ entity.evaluationskill3 }}</td>

                </tr>

                <tr>
                    <td colspan="2">{{ devneeds.skill4 }}</td>
                    <td>{{ entity.evaluationskill4 }}</td>

                </tr>

                <tr>
                    <td colspan="2">{{ devneeds.skill5 }}</td>
                    <td>{{ entity.evaluationskill5 }}</td>

                </tr>


                <tr>
                    <td colspan="5"><h5 class="text-center">{{ template.organizationField }}</h5></td>
                </tr>

                <tr>
                    <th style="width:40%" colspan="2">{{ template.whatWhy }}</th>
                    <th style="width:60%">{{ template.evaluation }}</th>

                </tr>


                <tr>
                    <td>{{ devneeds.OrganizationCompetence1 }}</td>
                    <td>{{ devneeds.OrganizationDescription1 }}</td>

                    <td>{{ entity.evaluationorganization1 }}</td>

                </tr>

                <tr>
                    <td>{{ devneeds.OrganizationCompetence2 }}</td>
                    <td>{{ devneeds.OrganizationDescription2 }}</td>

                    <td>{{ entity.evaluationorganization2 }}</td>

                </tr>

                <tr>
                    <td>{{ devneeds.OrganizationCompetence3 }}</td>
                    <td>{{ devneeds.OrganizationDescription3 }}</td>

                    <td>{{ entity.evaluationorganization3 }}</td>

                </tr>

                <tr>
                    <td>{{ devneeds.OrganizationCompetence4 }}</td>
                    <td>{{ devneeds.OrganizationDescription4 }}</td>

                    <td>{{ entity.evaluationorganization4 }}</td>

                </tr>

                <tr>
                    <td>{{ devneeds.OrganizationCompetence5 }}</td>
                    <td>{{ devneeds.OrganizationDescription5 }}</td>

                    <td>{{ entity.evaluationorganization5 }} </td>

                </tr>


                </tbody>


            </table>


            <h3>{{ template.feedbackorganization }}</h3>

            <p>{{ template.feedbackorganizationdescription1 }}</p>

            {{ entity.feedbackorganization1 }}


            <p>{{ template.feedbackorganizationdescription2 }}</p>

            {{ entity.feedbackorganization2 }}


            <p>{{ template.feedbackorganizationdescription3 }}</p>

            {{ entity.feedbackorganization3 }}


            <p>{{ template.feedbackorganizationdescription4 }}</p>

            {{ entity.feedbackorganization4 }}



            {% if entity.formstatus.id > 3 %}

                <div class="row margin-top-50">
                    <div class="col-md-6">

                        <h3>Comments supervisor</h3>

                        {{ entity.commentSup }}

                    </div>
                </div>

            {% endif %}

            {% if entity.formstatus.id > 5 %}

                <div class="row margin-top-50">
                    <div class="col-md-6">

                        <h3>Feedback HR</h3>

                        {{ entity.feedbackHR }}

                    </div>
                </div>

            {% endif %}


            {% block comment %}
            {% endblock %}


            <a href="{{ path('feedbackcycle') }}" class="btn btn-default btn-cons" type="button"> Back to the list </a>


        </div>
    </div>


{% endblock %}

