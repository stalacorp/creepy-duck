{% extends '::base.html.twig' %} {% block body -%}

    <h2>{{ 'organization.index.title' | trans }}</h2>

    <div class="row">
        <div class="col-md-6">

            {% for flashMessage in app.session.flashbag.get('success') %}

                <div class="alert alert-success">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>

            {% endfor %}

            {% for entity in entities %}

                <table class="table borderless">


                    <tr>
                        <th>Logo</th>
                        <td><img src="{{ app.request.basePath }}{{ vich_uploader_asset(entity, 'logoFile') }}"
                                 alt="{{ entity.name }}" style="max-width: 100px; max-height: 100px;"/></td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>

                    <tr>
                        <th></th>
                        <td></td>
                    </tr>


                </table>

                <a href="{{ path('organization_edit', { 'id': entity.id }) }}" type="button"
                   class="btn btn-default">{{ 'button.edit' | trans }}</a>

            {% endfor %}


        </div>
    </div>


{% endblock %}






