{% extends '::base.html.twig' %} {% block body -%}
<!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
<div id="portlet-config" class="modal hide">
	<div class="modal-header">
		<button data-dismiss="modal" class="close" type="button"></button>
		<h3>Widget Settings</h3>
	</div>
	<div class="modal-body">Widget settings form goes here</div>
</div>
<div class="clearfix"></div>
<div class="container">
	<div class="content">

		<div class="page-title">
			<i class="fa fa-group"></i>
			<h3>
				<span class="semi-bold">Organizations</span>
			</h3>
		</div>

		{% for flashMessage in app.session.flashbag.get('success') %}
				
		<div class="alert alert-success">
                  <button class="close" data-dismiss="alert"></button>
                  {{ flashMessage }}
        </div>	
		{% endfor %}

		<div class="row margin-top-50">
			<div class="col-md-8">
						         
		              {% for flashMessage in app.session.flashbag.get('success') %}
						                      
		                  <div class="alert alert-success">
                            <button class="close" data-dismiss="alert"></button>
                            {{ flashMessage }}
                        </div>	
                        
		              {% endfor %}
				
						<table class="table no-more-tables">
							<tbody>
								<tr>
									<th>Name</th>
									<td>{{ entity.name }}</td>
								</tr>

								<tr>
									<th>Logo</th>
									<td><img src="{{ app.request.basePath }}{{ vich_uploader_asset(entity, 'logoFile') }}" alt="{{ entity.name }}" width="100" height="100"/></td>
								</tr>

							</tbody>
						</table>


							<p>
							 <a href="{{ path('organization_edit', { 'id': entity.id }) }}" type="button" class="btn btn-success btn-cons"> Edit </a>
							<!--{{ form(delete_form) }} !-->
							<a href="{{ path('organization') }}" type="button" class="btn btn-primary btn-cons"> Back to the list </a></p>





			</div>
		</div>
	</div>
</div>

{% endblock %}






