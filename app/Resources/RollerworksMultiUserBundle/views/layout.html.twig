<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />

        {% block stylesheets %}

            <link href="{{ asset('assets/css/bootstrap.css')}}" rel="stylesheet" type="text/css" media="screen">

        {% endblock %}
    </head>
    <body>
        <div class="container">

        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">
            <div class="col-md-12">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
            </div>
        </div>
        </div>
    </body>
</html>
