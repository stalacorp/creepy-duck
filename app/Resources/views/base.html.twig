<script>



    $( document ).ready(function() {
        //Date Pickers
        $('.datepicker').datepicker({
            autoclose: true,
            todayHighlight: true,
            language:$('#thelocale').val()

        });

        $('.select2').select2();


        {% block documentReady %}
        {% endblock %}

    });

</script>
